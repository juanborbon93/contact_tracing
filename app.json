{
    "name": "sms contact tracing",
    "description": "An application using the twilio api to let people sign up for covid exposure alerts",
    "repository": "https://github.com/juanborbon93/contact_tracing",
    "logo": "https://github.com/juanborbon93/contact_tracing/blob/master/docs/app_logo.png?raw=true",
    "keywords": ["python", "sms", "twilio"],
    "env":{
        "APP_PHONE_NUMBER":{
            "description":"Twilio phone number used by app",
            "value":"+123456789"
        },
        "API_KEY":{
            "description":"API key used by app admin",
            "value":"your_api_key"
        },
        "TWILIO_ACCOUNT":{
            "description":"Twilio account SID",
            "value":"your_acount_sid"
        },
        "TWILIO_TOKEN":{
            "description":"Twilio API token",
            "value":"your_api_token"
        }
    },
    "addons":[
        {
            "plan": "heroku-postgresql",
            "options": {
                "version": "9.5"
            }
        }
    ]
  }